<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed: base background + centered 58dp circle overlay -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gridBackground" />
                </shape>
            </item>
            <item android:width="58dp" android:height="58dp" android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/pressOverlay" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default: base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gridBackground" />
        </shape>
    </item>
</selector>


